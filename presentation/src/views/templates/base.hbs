<!DOCTYPE html>
<html>
    <head>
        <title>{{title}}</title>

        {{! styles }}
        <link rel="stylesheet" href="{{ path 'css' 'global.css' }}">
        {{#each style}}
        <link rel="stylesheet" href="{{ path 'css' this }}">
        {{/each}}
    </head>

    <body>
        {{> body }}

        {{! scripts }}
        {{#dev}}
        <script src="http://localhost:{{ config.ports.watch }}/livereload.js"></script>
        {{/dev}}
    </body>
</html>